#!/bin/bash

# Platform detection wrapper for stop script
# This script detects the platform and calls the appropriate stop script

if [[ "$OSTYPE" == "msys" || "$OSTYPE" == "cygwin" || "$OSTYPE" == "win32" ]]; then
    # Windows (Git Bash, Cygwin, or MSYS)
    exec bin/windows/stop.bat "$@"
elif [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS
    exec bin/unix/stop.sh "$@"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # Linux
    exec bin/unix/stop.sh "$@"
else
    # Default to Unix for other platforms
    exec bin/unix/stop.sh "$@"
fi
