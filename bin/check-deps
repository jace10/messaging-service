#!/bin/bash

# Platform detection wrapper for check-deps script
# This script detects the platform and calls the appropriate check-deps script

if [[ "$OSTYPE" == "msys" || "$OSTYPE" == "cygwin" || "$OSTYPE" == "win32" ]]; then
    # Windows (Git Bash, Cygwin, or MSYS)
    exec bin/windows/check-deps.bat "$@"
elif [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS
    exec bin/unix/check-deps.sh "$@"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # Linux
    exec bin/unix/check-deps.sh "$@"
else
    # Default to Unix for other platforms
    exec bin/unix/check-deps.sh "$@"
fi
