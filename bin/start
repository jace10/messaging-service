#!/bin/bash

# Start script for messaging service
# Supports Unix-like systems (Linux, macOS)

if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS
    exec bin/unix/start.sh "$@"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # Linux
    exec bin/unix/start.sh "$@"
else
    # Default to Unix for other platforms
    exec bin/unix/start.sh "$@"
fi
